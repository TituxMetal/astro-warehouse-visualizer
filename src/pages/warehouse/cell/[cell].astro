---
// src/pages/warehouse/cell/[cell].astro
import { ViewTransitions } from 'astro:transitions'
import { Breadcrumb } from '~/components/Breadcrumb'
import { CellVisualization } from '~/components/CellVisualization'
import BaseLayout from '~/layouts/BaseLayout.astro'
import { getCellConfig } from '~/utils/warehouse'

export const prerender = false

const { cell } = Astro.params
const cellNumber = parseInt(cell || '1')

if (!getCellConfig(cellNumber)) {
  return Astro.redirect('/warehouse')
}
---

<BaseLayout title={`Cell ${cellNumber} Overview`}>
  <ViewTransitions />

  <main class='container mx-auto px-4 py-8'>
    <Breadcrumb cell={cellNumber} showLocation client:load />
    <CellVisualization cell={cellNumber} client:load />
  </main>
</BaseLayout>
